ctrl - right :	yabai -m space --focus prev || yabai -m space --focus next
ctrl - left :	yabai -m space --focus prev || yabai -m space --focus next
ctrl + shift - right : (yabai -m window --space prev && yabai -m space --focus prev) || (yabai -m window --space next && yabai -m space --focus next)
ctrl + shift - left : (yabai -m window --space prev && yabai -m space --focus prev) || (yabai -m window --space next && yabai -m space --focus next)

ctrl - brightness_down : yabai -m space --focus 1
ctrl - brightness_up : yabai -m space --focus 2
